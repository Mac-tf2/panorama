<root>
	<styles>
		<include src="file://{resources}/styles/main.scss" />
	</styles>

	<scripts>
		<include src="file://{resources}/scripts/hud/customizer.js" />

	</scripts>

	<ChaosHud class="hud" onload="HudCustomizer.load()" hittest="false">
		<!-- Non-interactive HUD elements have hit test disabled for efficiency -->

		<!-- In world UI is first to make sure it shows up behind all "screen-looking" UI -->
		<Panel class="hud__in-world" hittest="false" hittestchildren="false">
			<MomHudGhostEntities />
			<MomHudConcEntities />
			<MomHudDamageIndicator />
			<MomHudCgaz />
			<MomHudReticle />
		</Panel>

		<Panel id="HudCustomizer" class="hud-customizer hud-customizer--disabled" hittest="false" hittestchildren="false" />

		<!-- These all need IDs, otherwise customizer can't reference them properly. (Not possible to set in JS) -->
		<HudTrickTracker id="TrickTracker" custom="{ 'draggable': true }" />
		<HudComparisons id="Comparisons" custom="{ 'draggable': true }" />
		<MomHudSynchronizer id="Syncronizer" custom="{ 'draggable': true }" />
		<MomHudSpeedometer id="Speedometer" custom="{ 'draggable': true }" />
		<MomHudConcCooktime id="ConcCooktime" custom="{ 'draggable': true }" />
		<MomHudStickyCharge id="StickyCharge" custom="{ 'draggable': true }" />
		<MomHudStickyCount id="StickyCount" custom="{ 'draggable': true }" />
		<MomHudStatus id="Status" custom="{ 'draggable': true }" />
		<MomHudTimer id="Timer" custom="{ 'draggable': true }" />
		<MomHudStrafeSync id="StrafeSync" custom="{ 'draggable': true }" />
		<HudStaticMenu id="StaticMenu" custom="{ 'draggable': true }" />
		<MomHudChat id="Chat" draggable="true" custom="{ 'draggable': true }" />
		<MomHudKeyPress id="KeyPress" custom="{ 'draggable': true }" />
		<MomHudVersionInfo id="VersionInfo" custom="{ 'draggable': true }" />
		<MomHudMapInfo id="MapInfo" custom="{ 'draggable': true }" />
		<MomHudSpecInfo id="SpecInfo" custom="{ 'draggable': true }" />
		<MomHudWeaponSelection id="WeaponSelection" custom="{ 'draggable': true }" />
		<TrickList id="TrickList" custom="" />
		<MomHudSpectate id="Spectator" />

		<ChaosHudBlurTarget
			id="HudBlur"
			blurrects="Leaderboards TrickList"
			class="hud-blur"
			hittest="false"
			hittestchildren="false"
		>
			<ChaosBackbufferImagePanel class="full" />
		</ChaosHudBlurTarget>

		<!-- This container is here so we can move the leaderboard in and out of it during the end-of-match sequence -->
		<Panel id="LeaderboardsContainer" class="full-width full-height" hittest="false" hittestchildren="true">
			<HudLeaderboards id="Leaderboards" hittest="true" />
		</Panel>

		<!-- Make sure these are at the bottom to get the z-order right -->
		<ToastManager />
		<ChaosPopupManager id="PopupManager" onpopupsdismissed="" />
		<ContextMenuManager id="ContextMenuManager" />
		<ChaosTooltipManager id="TooltipManager" hittest="false" />

		<!-- Console notifications should always draw above anything else! -->
		<Panel id="HudNotify" hittest="false" hittestchildren="false">
			<Frame src="file://{resources}/layout/hud/consolenotify.xml" />
		</Panel>
	</ChaosHud>
</root>
